# Stage 1: Build stage
FROM maven:3.9.6-eclipse-temurin-21-alpine AS build
WORKDIR /app

# 1. Copy only pom.xml to cache dependencies
COPY pom.xml .
RUN mvn dependency:go-offline -B

# 2. Copy source and build the JAR
COPY src ./src
RUN mvn clean package -DskipTests

# Stage 2: Runtime stage
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

# 3. Security: Run as a non-privileged user
RUN addgroup -S spring && adduser -S spring -G spring
USER spring:spring

# 4. Copy the compiled JAR from the build stage
COPY --from=build /app/target/*.jar app.jar

# 5. Production Environment Variables
ENV GOTENBERG_URL=http://gotenberg:3000
ENV JAVA_OPTS="-Xms256m -Xmx512m"

EXPOSE 8080

# 6. Execute with optimized JVM settings
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]
